page {
  width: 100%;
  height: 100%;
  overflow: hidden;
}

.rightIcon {
  margin-right: 30rpx;
}

.van-radio-group {
  /* display: flex; */
  justify-content: space-between;
}

.van-radio {
  height: 100rpx;
  font-size: 28rpx;
}

/* 顶部筛选框内文字 */
.van-dropdown-menu__item .van-dropdown-menu__title .van-ellipsis {
  height: 30rpx;
  font-size: 22rpx;
  font-weight: 400;
  line-height: 30rpx;
  color: #333333;
}

.van-cell:after {
  border-bottom: 0 !important;
}

/* .field-index--van-field {
  padding: 0 !important;
} */
/* 步骤条加高 */
.steps-index--van-step__icon {
  height: 36rpx;
}

/* 预约列表box */
.orderTabBox {
  background-color: #ffffff;
  padding: 0 0 0 30rpx;
  height: 100%;
  overflow: auto;
}

.orderTabBox .container {
  box-sizing: border-box;
  border-bottom: 1px solid #E5E5E5;
  height: 142rpx;
  padding: 40rpx 0 0 0;
  display: flex;
  justify-content: space-between;
}

.orderTabBox .container .yuyueMsg .shipName {
  vertical-align: super;
  margin: 0 0 0 16rpx;
  color: #222222;
  font-size: 28rpx;
}

.orderTabBox .container .yuyueMsg .status {
  vertical-align: super;
  margin: 0 0 0 16rpx;
  padding: 6rpx;
  border-radius: 15rpx;
  background: rgb(253, 191, 68, .14);
  font-size: 20rpx;
  color: #FDBF44;
}

.orderTabBox .container .yuyueMsg .statusTwo {
  vertical-align: super;
  margin: 0 0 0 16rpx;
  padding: 6rpx;
  border-radius: 15rpx;
  background: rgba(96, 188, 103, .14);
  font-size: 20rpx;
  color: #60BC67;
}

.orderTabBox .container .yuyueMsg .statusThree {
  vertical-align: super;
  margin: 0 0 0 16rpx;
  padding: 6rpx;
  border-radius: 15rpx;
  background: rgba(82, 125, 225, .14);
  font-size: 20rpx;
  color: #527DE1;
}

.orderTabBox .container .yuyueMsg .detail {
  font-size: 24rpx;
  color: #999999;
}
/* 预约列表box end*/
.orderTabBox .container image {
  width: 48rpx;
  height: 36rpx;
}